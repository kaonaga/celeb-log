<p>
  <b>Name:</b>
  <%=h @brand.name %>
</p>

<p>
  <b>Phonetic:</b>
  <%=h @brand.phonetic %>
</p>

<p>
  <b>Listed count:</b>
  <%=h @brand.listed_count %>
</p>

<table>
<% @posts.each do |post| %>
  <tr>
    <td><%=h post.blog.author %></td>
    <td><%= link_to post.blog_entry.title, post %></td>
    <td><%=h post.brand.name %><br>(<%=h post.brand.phonetic %>)</td>
    <!-- <td>
      <% unless post.product.nil? %>
        <%=h post.product.name %>
      <% end %>
    </td> -->
    <td><%= post.blog_entry.content %></td>
    <td><%=h post.posted_date %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="pagination"><%= will_paginate @posts %></div>
<%= link_to 'Edit', edit_brand_path(@brand) %> |
<%= link_to 'Destroy', @brand, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', :back %>