<h1 class="title"><a href="#">Listing posts</a></h1>
<p class="meta">New posts</p>
<table>
  <tr>
    <th>Author</th>
    <th>Entry Title</th>
    <th>Brand</th>
    <!-- <th>Product</th> -->
    <th>Content</th>
    <th>Posted date</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.blog.author, post.blog %></td>
    <td><%= link_to post.blog_entry.title, post %></td>
    <td><%= link_to post.brand.name, post %><br>(<%= link_to post.brand.phonetic, post %>)</td>
    <!-- <td>
      <% unless post.product.nil? %>
        <%=h post.product.name %>
      <% end %>
    </td> -->
    <td><%= post.blog_entry.content %></td>
    <td><%=h post.posted_date %></td>
    <% if @session[:user_id] == 1 %>
      <td><%= link_to 'NG Word', :controller => :ng_words, :action => :new, :id => post.brand.id %></td>
      <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<div class="pagination"><%= will_paginate @posts %></div>

<% if @session[:user_id] == 1 %>
  <%= link_to 'NG Word Index', ng_words_path %>
<% end %>